" Exit from insert mode with jj
inoremap jj <Esc>

" Move
nnoremap <C-d> 10j
nnoremap <C-u> 10k

" Reload .ideavimrc
nnoremap <Space>vs :source ~/.ideavimrc<CR>

" Save file
nnoremap <Space>w :w<CR>

" Goto
nnoremap <Space>f :action GotoFile<CR>
nnoremap <Space>g :action GotoSymbol<CR>
nnoremap <Space>e :action FileStructurePopup<CR>

" Build
nnoremap <Space>r :action Run<CR>
